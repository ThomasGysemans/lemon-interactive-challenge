<dialog>
    <button type="button" data-close-modal>&lt; Quitter</button>
    <h1>
        Créez votre événement<br />
        rapidement et efficacement
    </h1>
    <form action="{{ path('post_events_submissions') }}" method="post">
        <input type="hidden" name="author" value="{{ app.user.id }}" />
        <input type="hidden" name="event" value="" />
        <twig:Input type="text" name="title" placeholder="Titre" />
        <twig:Input type="text" name="location" placeholder="Lieu" />
        <p>
            Du&nbsp;
            <input type="date" class="main-input" placeholder="jj/mm/aaaa" title="Date minimale" name="beginDate" />
            &nbsp;
            au
            &nbsp;
            <input type="date" class="main-input" placeholder="jj/mm/aaaa" title="Date maximale" name="endDate" />
        </p>
        <textarea name="description" placeholder="Description de l'événement..." class="main-input"></textarea>
        <twig:Button:Primary data-close-modal>Créer l'événement</twig:Button:Primary>
    </form>
</dialog>